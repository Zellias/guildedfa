<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/output.css' />
  <link href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/6d201b1005.js" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/flowbite@1.3.4/dist/flowbite.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap" rel="stylesheet">
  <script src="https://www.google.com/recaptcha/api.js"></script>
<body class="bg-gray-900">
  <!--Navbar ================================================================================-->
  <header style="font-family: 'Lalezar', cursive;">
    <nav class="bg-white border-gray-200 px-2 sm:px-4 py-2.5 rounded dark:bg-gray-800">
      <div class="container flex flex-wrap justify-between items-center mx-auto">
        <a href="/" class="flex items-center">
          <img src="/images/logo.png" class="mr-3 h-6 sm:h-10" alt="GuildedFa" />
          <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">گیلددفا</span>
        </a>
        <div class="flex items-center md:order-2">
          <button type="button"
            class="flex mr-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600"
            id="user-menu-button" aria-expanded="false" type="button" data-dropdown-toggle="dropdown">
            <span class="sr-only">Open user menu</span>
            <img class="w-8 h-8 rounded-full" src="images/user.png" alt="user photo">
          </button>
          <!-- Dropdown menu -->
          <div
            class="hidden z-50 my-4 text-base list-none bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600"
            id="dropdown">
            <div class="py-3 px-4">
              <span class="block text-sm text-gray-900 dark:text-white">
                <%- user.username %>
              </span>
              <span class="block text-sm font-medium text-gray-500 truncate dark:text-gray-400">
                <%- user.email %>
              </span>
            </div>
           
          </div>
         
        </div>
        <div class="hidden justify-between items-center w-full md:flex md:w-auto md:order-1" id="mobile-menu-2">
          <ul class="flex flex-col mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium">

          </ul>
        </div>
      </div>

    </nav>
  </header>
  <!--=======================================================================================--> 

  <section style="font-family: 'Lalezar', cursive; color: white;">
    <div dir="rtl" style="box-sizing: border-box;width: auto;height: auto;padding: 30px; background-color: rgb(75 85 99); margin: auto; margin-top: 4em; width: 70%; height: auto; border-radius: 20px 20px 20px 20px; padding: 5%; ">
     <form action="/posts/add"  method="post">
        <%- include('_form_fields') %>
     </form>
    </div> 

   </section>

        



  <!--=======================================================================================-->
</body>

<style>
  .rotate {
    animation: rotation 2s infinite linear;
  }

  @keyframes rotation {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(359deg);
    }
  }
</style>
<script>
  function clicked() {
    document.location.replace('/posts/add')
  }
  function clicked2() {
    document.location.replace('/users/<%-user.username%>')
  }
</script>
</html>