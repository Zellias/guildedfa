<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/output.css' />
  <link href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/6d201b1005.js" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/flowbite@1.3.4/dist/flowbite.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap" rel="stylesheet">
  <script src="https://www.google.com/recaptcha/api.js"></script>
<body class="bg-gray-900">
  <!--Navbar ================================================================================-->
  <header style="font-family: 'Lalezar', cursive;">
    <nav class="bg-white border-gray-200 px-2 sm:px-4 py-2.5 rounded dark:bg-gray-800">


    </nav>
  </header>
  <!--=======================================================================================--> 

  <section style="font-family: 'Lalezar', cursive; color: white;">
    <div dir="rtl" style="box-sizing: border-box;width: auto;height: auto;padding: 30px; background-color: rgb(75 85 99); margin: auto; margin-top: 4em; width: 70%; height: auto; border-radius: 20px 20px 20px 20px; padding: 5%; ">
     <form action="/posts/edit/<%-article.id%>?_method=PUT"  method="post">

        <div>
            <label  for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">موضوع</label>
            <input value="<%- article.title %>" type="text" id="title" name="title" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="موضوع مطلب رو وارد کنید" required>
        </div>
        <div style="margin-top: 8px;">
            <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">توضیح کوتاه</label>
            <input value="<%- article.description %>" type="text" id="description" name="description" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="توضیح کوتاه رو وارد کنید" required>
        </div>
        
        <div style="margin-top: 8px;">
            <label for="markdown" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">مطلب</label>
            <textarea value="<%- article.markdown %>" id="markdown" name="markdown" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="مطالب رو وارد کنید" required><%- article.markdown%></textarea>
        </div>
        <div style="margin-top: 8px;">
            <label for="imageLink" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">لینک عکس</label>
            <input value="<%- article.imageURL %>" type="text" id="imageLink" name="imageLink" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="لینک عکس موضوع رو وارد کنید" required>
        </div>
        <div style="margin-top: 1em;">
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">ثبت</button>
        <button type="button" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">بازگشت</button>
        </div>

     </form>
    </div> 

   </section>

        



  <!--=======================================================================================-->
</body>

<style>
  .rotate {
    animation: rotation 2s infinite linear;
  }

  @keyframes rotation {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(359deg);
    }
  }
</style>
<script>
  function clicked() {
    document.location.replace('/posts/add')
  }
  function clicked2() {
    document.location.replace('/users/<%-user.username%>')
  }
</script>
</html>